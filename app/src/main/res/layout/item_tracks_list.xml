<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:background="@drawable/item"
    android:paddingLeft="18dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/text_track_info_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignWithParentIfMissing="true"
        android:text="INFO TRACK ...INFO TRACK ...INFO TRACK ...INFO TRACK ... "
        android:singleLine="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/liodevel_light_green"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/favorite_icon_item"
        android:layout_toLeftOf="@+id/favorite_icon_item"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/favorite_icon_item"
        android:background="@drawable/ic_action_action_favorite_outline"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/text_track_info_item"
        android:layout_toLeftOf="@+id/favorite_icon_item"
        android:layout_toStartOf="@+id/favorite_icon_item">

        <TextView
            android:id="@+id/text_track_date_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignWithParentIfMissing="true"
            android:text="DATE TRACK"
            android:gravity="center_vertical"
            android:textColor="@color/liodevel_dark_green"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_track_duration_item"
            android:layout_toLeftOf="@+id/text_track_duration_item"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/text_track_distance_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignWithParentIfMissing="true"
            android:text="DISTANCE TRACK"
            android:gravity="center_vertical|left"
            android:textColor="@color/liodevel_dark_grey"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_toLeftOf="@+id/text_track_duration_item"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/text_track_info_item"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/text_track_duration_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignWithParentIfMissing="true"
            android:text="DURATION TRACK"
            android:gravity="center_vertical|right"
            android:textColor="@color/liodevel_dark_grey"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_alignBottom="@+id/text_track_distance_item"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/favorite_icon_item"
            android:layout_toStartOf="@+id/favorite_icon_item"
            android:layout_weight="0.3"/>


    </LinearLayout>


</RelativeLayout>