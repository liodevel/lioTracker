<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.AppCompat.Light"
    tools:openDrawer="start">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_map2"
        app:menu="@menu/activity_map2_drawer">

    </android.support.design.widget.NavigationView>


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.Toolbar
            android:id="@+id/map_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/liodevel_white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

        <include
            layout="@layout/app_bar_map2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/linearLayout4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/text_provider_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Provider"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/liodevel_white"
                    android:background="@color/liodevel_dark_grey" />

                <Chronometer
                    android:id="@+id/chronoTracking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/liodevel_white"
                    android:background="@color/liodevel_dark_grey"/>

                <!--
                <TextView
                    android:id="@+id/text_time_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/time"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/liodevel_white"
                    android:background="@color/liodevel_dark_grey"
                    android:layout_alignBottom="@+id/text_info"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/map" />
-->

                <TextView
                    android:id="@+id/text_distance_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/distance"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/liodevel_white"
                    android:background="@color/liodevel_dark_grey" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Info"
                android:padding="3dp"
                android:textSize="14sp"
                android:textColor="@color/liodevel_white"
                android:background="@color/liodevel_dark_green"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="clickStart" />

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/map_toolbar"
            android:layout_above="@+id/linearLayout4" />

        <!-- GRAFICA COLORES -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_orange"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_yellow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_green"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_dark_green"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_cyan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/liodevel_chart_magenta"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/liodevel_dark_green"
            android:id="@+id/linearLayout3"
            android:layout_above="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="0-10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="10-20"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="20-30"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="30-40"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="40-50"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="50-70"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="70-90"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="90-120"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textSize="10sp"
                android:textColor="@color/liodevel_white"
                android:gravity="center"
                android:text="> 120"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/relativeLayout3"
            android:background="@color/liodevel_dark_green"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/relativeLayout2"
            android:background="@color/liodevel_dark_green"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_alignTop="@+id/map" />


    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
